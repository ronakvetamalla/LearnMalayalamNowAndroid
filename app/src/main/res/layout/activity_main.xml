<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="haagcolorado.joseph.edu.learnmalayalamnow.MainActivity">


    <!-- This is a comment -->
    <!-- Add a button to show  -->

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/topbanner"
        android:id="@+id/imageView"
        android:layout_marginBottom="404dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bottombanner"
        android:id="@+id/imageView3"
        android:layout_marginTop="401dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Learn the Alphabet"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="88dp"
        android:id="@+id/goToAlphabet"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goToReview"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/goToTopic"
        android:layout_alignStart="@+id/goToTopic"
        android:layout_alignRight="@+id/goToAlphabet"
        android:layout_alignEnd="@+id/goToAlphabet" />

    <Button
        android:text="Start a Topic Lesson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goToTopic"
        android:layout_above="@+id/goToReview"
        android:layout_alignLeft="@+id/goToAlphabet"
        android:layout_alignStart="@+id/goToAlphabet"
        android:layout_marginBottom="14dp" />

    <Button
        android:text="Quiz Sections"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/goToReview"
        android:layout_alignLeft="@+id/goToReview"
        android:layout_alignStart="@+id/goToReview"
        android:layout_marginTop="14dp"
        android:id="@+id/goToQuiz"
        android:layout_alignRight="@+id/goToReview"
        android:layout_alignEnd="@+id/goToReview" />

    <Button
        android:text="Load Saved Progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/goToProgress"
        android:layout_marginTop="21dp"
        android:layout_below="@+id/goToQuiz"
        android:layout_alignLeft="@+id/goToQuiz"
        android:layout_alignStart="@+id/goToQuiz"
        android:layout_alignRight="@+id/goToQuiz"
        android:layout_alignEnd="@+id/goToQuiz" />
</RelativeLayout>
