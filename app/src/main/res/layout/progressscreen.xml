<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="422dp"
        android:layout_height="109dp"
        app:srcCompat="@drawable/topbanner"
        android:id="@+id/imageView12" />

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/progressbar"
        android:id="@+id/imageView14" />

    <TextView
        android:text="Last Module Visited: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="25dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:id="@+id/txtProgressLastModule" />
    <TextView
        android:text="Number of Lessons Visited: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textSize="25dp"
        android:id="@+id/txtProgressNumModules" />
</LinearLayout>
