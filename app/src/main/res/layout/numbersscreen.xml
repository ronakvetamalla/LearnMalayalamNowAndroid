<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:weightSum="1">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="425dp"
        android:layout_height="108dp"
        app:srcCompat="@drawable/topbanner"
        android:id="@+id/imageView8" />

    <TextView android:layout_width="250dp"
        android:layout_height="80dp"
        android:text="Malayalam Numbers"
        android:padding="0dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="26dp"/>

    <TextView
        android:layout_width="250dp"
        android:layout_height="80dp"
        android:id="@+id/txtBigNumber"
        android:layout_gravity="center_horizontal"
        android:text="Number: 1"
        android:textSize="40dp"
        />


    <TextView
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:id="@+id/txtNumberMalayalam"
        android:text="Malayalam Number: "
        android:paddingLeft="10dp"
        android:textSize="20dp"
        android:layout_weight="0.23" />

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="130dp"
        android:paddingBottom="0dp"
        android:layout_alignParentBottom="true">
    <android.support.v7.widget.AppCompatImageButton
            android:layout_width="130dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/backbutton"
            android:id="@+id/btnBackNumbers"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:paddingLeft="50dp"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:paddingRight="50dp"
            android:layout_margin="40dp"
            />

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="130dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/nextbutton"
            android:id="@+id/btnNextNumbers"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:padding="10dp"
            android:layout_margin="30dp"
            />
        </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="88dp"
        app:srcCompat="@drawable/bottombanner"
        android:id="@+id/imageView5" />


</LinearLayout>
