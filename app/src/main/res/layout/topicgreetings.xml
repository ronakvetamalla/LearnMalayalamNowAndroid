<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="83dp"
        app:srcCompat="@drawable/topbanner"
        android:id="@+id/imageView2" />

    <TextView android:layout_width="250dp"
        android:layout_height="78dp"
        android:text="Malayalam Greetings"
        android:padding="0dp"
        android:paddingLeft="10dp"
        android:layout_gravity="center_horizontal"
        android:textSize="26dp"/>


    <TextView
        android:text="Malayalam Greeting: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtGreetingMalayalam"
        android:textSize="20dp"
        android:padding="40dp"/>

    <TextView
        android:text="English Translation: "
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/txtGreetingEnglish"
        android:textSize="20dp"
        android:padding="40dp"/>
        />

    <LinearLayout
        android:layout_width="375dp"
        android:layout_height="80dp"
        android:paddingBottom="0dp"
        android:layout_alignParentBottom="true">

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="130dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/backbutton"
            android:id="@+id/btnBackGreetings"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:paddingLeft="50dp"
            android:layout_gravity="center_horizontal"
            android:padding="10dp"
            android:paddingRight="50dp"
            android:layout_margin="40dp"
            />

        <android.support.v7.widget.AppCompatImageButton
            android:layout_width="130dp"
            android:layout_height="80dp"
            app:srcCompat="@drawable/nextbutton"
            android:id="@+id/btnNexGreetings"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="50dp"
            android:paddingRight="50dp"
            android:padding="10dp"
            android:layout_margin="30dp"
            />

    </LinearLayout>

    <android.support.v7.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/bottombanner"
        android:id="@+id/imageView9" />
</LinearLayout>
